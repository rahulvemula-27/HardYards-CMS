{
  "rewrites": [
    {
      "source": "/post/:slug",
      "destination": "/api/article?slug=:slug"
    },
    {
      "source": "/post",
      "destination": "/api/article"
    },
    {
      "source": "/sports",
      "destination": "/sports.html"
    },
    {
      "source": "/urban",
      "destination": "/urban.html"
    },
    {
      "source": "/rural",
      "destination": "/rural.html"
    },
    {
      "source": "/life",
      "destination": "/life.html"
    },
    {
      "source": "/",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*\\.html)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache"
        }
      ]
    }
  ]
}


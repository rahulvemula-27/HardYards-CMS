{
  "rewrites": [
    {
      "source": "/post/:slug",
      "destination": "/api/article?slug=:slug"
    },
    {
      "source": "/post",
      "destination": "/api/article"
    }
  ],
  "headers": [
    {
      "source": "/(.*\\.html)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache"
        }
      ]
    }
  ]
}

